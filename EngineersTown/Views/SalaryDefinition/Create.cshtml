@model EngineersTown.Models.ViewModels.SalaryDefinitionViewModel

@{
    ViewData["Title"] = "Create Salary Definition";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Create Salary Definition
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">Select Employee</label>
                                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.Employees">
                                        <option value="">-- Select Employee --</option>
                                    </select>
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div id="salaryFields" class="mt-4">
                            <!-- Fields will be dynamically loaded based on employee type -->
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#EmployeeId').change(function() {
                var employeeId = $(this).val();
                if (employeeId) {
                    $.get('@Url.Action("GetEmployeeType", "SalaryDefinition")', { id: employeeId }, function(data) {
                        loadSalaryFields(data);
                    });
                } else {
                    $('#salaryFields').html('');
                }
            });

            function loadSalaryFields(employeeType) {
                $.get('@Url.Action("GetSalaryFields", "SalaryDefinition")', { type: employeeType }, function(data) {
                    $('#salaryFields').html(data);
                });
            }
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        .form-label {
            color: #495057;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .btn {
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-1px);
            }
    </style>
}