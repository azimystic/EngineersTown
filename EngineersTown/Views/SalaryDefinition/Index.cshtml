@model IEnumerable<EngineersTown.Models.ViewModels.SalaryDefinitionViewModel>

@{
    ViewData["Title"] = "Salary Definitions";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-money-bill-wave me-2"></i>
                            Salary Definitions
                        </h3>
                        <a asp-action="Create" class="btn btn-light">
                            <i class="fas fa-plus me-1"></i> Create New
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="rounded-3">
                        <table id="salaryDefinitionsTable" class="table table-striped table-hover" style="width:100%">
                            <thead class="table-dark">
                                <tr>
                                    <th>Employee</th>
                                    <th>Type</th>
                                    <th>Department</th>
                                    <th>Designation</th>
                                    <th class="text-end">Gross Salary</th>
                                    <th class="text-end">Deductions</th>
                                    <th class="text-end">Net Salary</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@item.EmployeeName</td>
                                        <td>
                                            @{
                                                var badgeClass = "bg-secondary";
                                                var displayText = item.EmployeeType;

                                                if (item.EmployeeType == "001")
                                                {
                                                    badgeClass = "bg-primary";
                                                    displayText = "Regular";
                                                }
                                                else if (item.EmployeeType == "002")
                                                {
                                                    badgeClass = "bg-info text-dark";
                                                    displayText = "Contract";
                                                }
                                                else if (item.EmployeeType == "003")
                                                {
                                                    badgeClass = "bg-warning text-dark";
                                                    displayText = "Daily Wager";
                                                }
                                            }
                                            <span class="badge @badgeClass">@displayText</span>
                                        </td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.DesignationName</td>
                                        <td class="text-end fw-semibold">@item.GrossSalary.ToString("C")</td>
                                        <td class="text-end text-danger">@item.TotalDeductions.ToString("C")</td>
                                        <td class="text-end fw-bold text-success">@item.NetSalary.ToString("C")</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                 
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <th colspan="4" class="text-end">Totals:</th>
                                    <th class="text-end">@Model.Sum(i => i.GrossSalary).ToString("C")</th>
                                    <th class="text-end">@Model.Sum(i => i.TotalDeductions).ToString("C")</th>
                                    <th class="text-end">@Model.Sum(i => i.NetSalary).ToString("C")</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#salaryDefinitionsTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100],
                "order": [[0, "asc"]],
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                "language": {
                    "search": "<i class='fas fa-search'></i>",
                    "searchPlaceholder": "Search salary definitions...",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": 7 } // Disable sorting on Actions column
                ],
                "initComplete": function() {
                    // Add custom CSS after table initialization
                    $('.dataTables_filter input').addClass('form-control');
                    $('.dataTables_length select').addClass('form-select');
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Add hover effects to table rows
            $('#salaryDefinitionsTable tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            padding: 1rem 0.75rem;
        }

        .table td {
            padding: 0.75rem;
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            transform: scale(1.01);
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
            transition: all 0.2s ease;
        }

        .btn {
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        .badge {
            font-size: 0.75em;
            padding: 0.5em 0.75em;
        }

        .alert {
            border-radius: 0.75rem;
            border: none;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5rem 0.75rem;
            margin-left: 0.25rem;
            border-radius: 0.5rem;
            border: 1px solid #dee2e6;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background: #0d6efd;
                color: white !important;
                border: 1px solid #0d6efd;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background: #0d6efd;
                color: white !important;
                border: 1px solid #0d6efd;
            }

        #salaryDefinitionsTable tfoot th {
            font-weight: bold;
            background-color: #f8f9fa;
        }
    </style>
}