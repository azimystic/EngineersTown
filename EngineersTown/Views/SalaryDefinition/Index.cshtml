@model IEnumerable<EngineersTown.Models.ViewModels.SalaryDefinitionViewModel>

@{
    ViewData["Title"] = "Salary Definitions";
}

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4 rounded-t-lg">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-semibold flex items-center">
                    <i class="fas fa-money-bill-wave mr-3"></i>
                    Salary Definitions
                </h1>
                <a asp-action="Create" class="px-4 py-2 bg-white text-primary-600 font-medium rounded-md hover:bg-gray-50 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 transition-colors duration-200 flex items-center">
                    <i class="fas fa-plus mr-2"></i> Create New
                </a>
            </div>
        </div>

        <div class="p-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-4 px-4 py-3 rounded-md bg-green-50 border border-green-200 text-green-800 flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-4 px-4 py-3 rounded-md bg-red-50 border border-red-200 text-red-800 flex items-center">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table id="salaryDefinitionsTable" class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Designation</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Gross Salary</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Deductions</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Net Salary</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">@item.EmployeeName</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var badgeClass = "bg-gray-100 text-gray-800";
                                            var displayText = item.EmployeeType;

                                            if (item.EmployeeType == "001")
                                            {
                                                badgeClass = "bg-green-100 text-green-800";
                                                displayText = "Regular";
                                            }
                                            else if (item.EmployeeType == "002")
                                            {
                                                badgeClass = "bg-blue-100 text-blue-800";
                                                displayText = "Contract";
                                            }
                                            else if (item.EmployeeType == "003")
                                            {
                                                badgeClass = "bg-yellow-100 text-yellow-800";
                                                displayText = "Daily Wager";
                                            }
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @badgeClass">@displayText</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.DepartmentName</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.DesignationName</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">@item.GrossSalary.ToString("C")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 text-right">@item.TotalDeductions.ToString("C")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600 text-right">@item.NetSalary.ToString("C")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex justify-center space-x-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 font-medium" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 font-medium" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <th colspan="4" class="px-6 py-3 text-right text-sm font-medium text-gray-900">Totals:</th>
                                <th class="px-6 py-3 text-right text-sm font-bold text-gray-900">@Model.Sum(i => i.GrossSalary).ToString("C")</th>
                                <th class="px-6 py-3 text-right text-sm font-bold text-gray-900">@Model.Sum(i => i.TotalDeductions).ToString("C")</th>
                                <th class="px-6 py-3 text-right text-sm font-bold text-gray-900">@Model.Sum(i => i.NetSalary).ToString("C")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#salaryDefinitionsTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100],
                "order": [[0, "asc"]],
                "columnDefs": [
                    { "orderable": false, "targets": 7 } // Disable sorting on Actions column
                ],
                "language": {
                    "search": "_INPUT_",
                    "searchPlaceholder": "Search salary definitions...",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries"
                }
            });
        });
    </script>
}