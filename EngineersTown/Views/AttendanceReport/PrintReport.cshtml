                                        <div title="@attendance.HolidayName">H</div>
                                    }
                                    else if (attendance.Status == "OFF")
                                    {
                                        <div>OFF</div>
                                    }
                                    else if (attendance.Status == "P" || attendance.Status == "L")
                                    {
                                        <div>@attendance.Status</div>
                                        @if (!string.IsNullOrEmpty(attendance.TimeIn) || !string.IsNullOrEmpty(attendance.TimeOut))
                                        {
                                            <div class="time-text">
                                                @if (!string.IsNullOrEmpty(attendance.TimeIn))
                                                {
                                                    <div>@attendance.TimeIn</div>
                                                }
                                                @if (!string.IsNullOrEmpty(attendance.TimeOut))
                                                {
                                                    <div>@attendance.TimeOut</div>
                                                }
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div>@attendance.Status</div>
                                    }
                                </td>
                            }
                            <td class="stats-summary">@employee.PresentDays</td>
                            <td class="stats-summary">@employee.AbsentDays</td>
