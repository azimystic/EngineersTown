                        </tr>
                    }
                    <tr class="department-summary">
                        <td colspan="@(Model.DaysInMonth + 2)" class="employee-info">
                            <strong>@departmentGroup.Key Department Summary</strong>
                        </td>
                        <td class="stats-summary"><strong>@departmentGroup.Sum(e => e.PresentDays)</strong></td>
                        <td class="stats-summary"><strong>@departmentGroup.Sum(e => e.AbsentDays)</strong></td>
                        <td class="stats-summary"><strong>@departmentGroup.Sum(e => e.LateDays)</strong></td>
                        <td class="stats-summary"><strong>@departmentGroup.Sum(e => e.HolidayDays)</strong></td>
                        <td class="stats-summary"><strong>@departmentGroup.Sum(e => e.OffDays)</strong></td>
                    </tr>
                </tbody>
            </table>
        }
    }

    <!-- Daily Wage Employees Section -->
