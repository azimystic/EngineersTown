                                };

                                <td class="day-cell @cssClass" title="@attendance.Date.ToString("dd MMM")">
                                    @if (attendance.Status == "H")
                                    {
                                        <div title="@attendance.HolidayName">H</div>
                                    }
                                    else if (attendance.Status == "OFF")
                                    {
