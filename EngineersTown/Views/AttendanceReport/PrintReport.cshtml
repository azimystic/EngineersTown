    {
        <div class="section-header">
            Daily Wager Employees - @Model.DailyWageEmployees.Sum(g => g.Count()) Employee(s)
        </div>

        @foreach (var departmentGroup in Model.DailyWageEmployees)
        {
            <div class="department-header">
                @departmentGroup.Key Department (@departmentGroup.Count() Employee(s))
            </div>

            <table class="attendance-table">
                <thead>
                    <tr>
                        <th rowspan="2" class="employee-info">Employee Name</th>
                        <th rowspan="2" class="designation">Designation</th>
                        @for (int day = 1; day <= Model.DaysInMonth; day++)
                        {
                            var currentDate = new DateTime(Model.Year, Model.Month, day);
                            <th class="day-header">@day </th>
                        }
                        <th rowspan="2" class="stats-summary">P</th>
                        <th rowspan="2" class="stats-summary">A</th>
                        <th rowspan="2" class="stats-summary">L</th>
                        <th rowspan="2" class="stats-summary">H</th>
                        <th rowspan="2" class="stats-summary">OFF</th>
                    </tr>
                    <tr>
                        @for (int day = 1; day <= Model.DaysInMonth; day++)
                        {
                            var currentDate = new DateTime(Model.Year, Model.Month, day);
                            <th class="day-header" style="font-size: 5px;">@currentDate.Day</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in departmentGroup.OrderBy(e => e.EmployeeName))
                    {
                        <tr>
                            <td class="employee-info">@employee.EmployeeName</td>
                            <td class="designation">@employee.DesignationName</td>
                            @foreach (var attendance in employee.AttendanceData)
                            {
                                var cssClass = attendance.Status switch
                                {
                                    "P" => "status-p",
