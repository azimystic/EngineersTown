                <td class="stats-summary">@Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.AbsentDays)</td>
                <td class="stats-summary">@Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.LateDays)</td>
                <td class="stats-summary">@Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.HolidayDays)</td>
                <td class="stats-summary">@Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.OffDays)</td>
            </tr>
            <tr class="summary-row">
                <td class="employee-info"><strong>GRAND TOTAL</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.Sum(g => g.Count()) + Model.ContractEmployees.Sum(g => g.Count()) + Model.DailyWageEmployees.Sum(g => g.Count())))</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.SelectMany(g => g).Sum(e => e.PresentDays) + Model.ContractEmployees.SelectMany(g => g).Sum(e => e.PresentDays) + Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.PresentDays)))</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.SelectMany(g => g).Sum(e => e.AbsentDays) + Model.ContractEmployees.SelectMany(g => g).Sum(e => e.AbsentDays) + Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.AbsentDays)))</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.SelectMany(g => g).Sum(e => e.LateDays) + Model.ContractEmployees.SelectMany(g => g).Sum(e => e.LateDays) + Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.LateDays)))</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.SelectMany(g => g).Sum(e => e.HolidayDays) + Model.ContractEmployees.SelectMany(g => g).Sum(e => e.HolidayDays) + Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.HolidayDays)))</strong></td>
                <td class="stats-summary"><strong>@((Model.RegularEmployees.SelectMany(g => g).Sum(e => e.OffDays) + Model.ContractEmployees.SelectMany(g => g).Sum(e => e.OffDays) + Model.DailyWageEmployees.SelectMany(g => g).Sum(e => e.OffDays)))</strong></td>
            </tr>
        </tbody>
    </table>

    <!-- Legend -->
    <div style="margin-top: 30px; text-align: center;">
        <h4 style="font-size: 10px; margin-bottom: 10px;">LEGEND</h4>
        <div style="display: inline-block; text-align: left; font-size: 8px;">
            <div style="margin: 2px 0;">
                <span class="day-cell status-p" style="display: inline-block; width: 20px; height: 15px; margin-right: 5px;"></span>
                <strong>P</strong> = Present (with Time In/Out)
            </div>
            <div style="margin: 2px 0;">
                <span class="day-cell status-a" style="display: inline-block; width: 20px; height: 15px; margin-right: 5px;"></span>
                <strong>A</strong> = Absent
            </div>
            <div style="margin: 2px 0;">
                <span class="day-cell status-l" style="display: inline-block; width: 20px; height: 15px; margin-right: 5px;"></span>
                <strong>L</strong> = Late (with Time In/Out)
            </div>
            <div style="margin: 2px 0;">
                <span class="day-cell status-h" style="display: inline-block; width: 20px; height: 15px; margin-right: 5px;"></span>
                <strong>H</strong> = Holiday (Custom Holiday from Calendar)
            </div>
            <div style="margin: 2px 0;">
                <span class="day-cell status-off" style="display: inline-block; width: 20px; height: 15px; margin-right: 5px;"></span>
                <strong>OFF</strong> = Off Day (Weekend)
            </div>
        </div>
    </div>

    <div style="margin-top: 30px; text-align: center; font-size: 8px; color: #666;">
        <hr style="width: 50%; margin: 15px auto;" />
        <p><strong>Generated by Engineers Town Attendance System</strong></p>
        <p>Report Date: @DateTime.Now.ToString("dd MMMM yyyy HH:mm")</p>
        <p>This is a system generated report and does not require signature</p>
        <p style="margin-top: 10px; font-size: 7px;">
            For each employee: P = Present with Time In/Out, A = Absent, L = Late with Time In/Out<br />
            H = Holiday (hover to see holiday name), OFF = Official Off Day
        </p>
    </div>
</body>
</html>