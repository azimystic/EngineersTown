                    </tr>
                </tbody>
            </table>
        }
    }

    <!-- Grand Summary -->
    <div class="section-header" style="margin-top: 30px;">
        ATTENDANCE SUMMARY - ALL EMPLOYEES (@Model.MonthName)
    </div>

    <table class="attendance-table" style="width: 70%; margin: 20px auto;">
        <thead>
            <tr>
                <th style="width: 200px;">Employee Type</th>
                <th style="width: 80px;">Count</th>
                <th style="width: 80px;">Present Days</th>
                <th style="width: 80px;">Absent Days</th>
                <th style="width: 80px;">Late Days</th>
                <th style="width: 80px;">Holiday Days</th>
                <th style="width: 80px;">Off Days</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="employee-info">Regular Employees (001)</td>
                <td class="stats-summary">@Model.RegularEmployees.Sum(g => g.Count())</td>
                <td class="stats-summary">@Model.RegularEmployees.SelectMany(g => g).Sum(e => e.PresentDays)</td>
                <td class="stats-summary">@Model.RegularEmployees.SelectMany(g => g).Sum(e => e.AbsentDays)</td>
                <td class="stats-summary">@Model.RegularEmployees.SelectMany(g => g).Sum(e => e.LateDays)</td>
                <td class="stats-summary">@Model.RegularEmployees.SelectMany(g => g).Sum(e => e.HolidayDays)</td>
                <td class="stats-summary">@Model.RegularEmployees.SelectMany(g => g).Sum(e => e.OffDays)</td>
            </tr>
            <tr>
                <td class="employee-info">Contract Employees (002)</td>
                <td class="stats-summary">@Model.ContractEmployees.Sum(g => g.Count())</td>
                <td class="stats-summary">@Model.ContractEmployees.SelectMany(g => g).Sum(e => e.PresentDays)</td>
                <td class="stats-summary">@Model.ContractEmployees.SelectMany(g => g).Sum(e => e.AbsentDays)</td>
                <td class="stats-summary">@Model.ContractEmployees.SelectMany(g => g).Sum(e => e.LateDays)</td>
                <td class="stats-summary">@Model.ContractEmployees.SelectMany(g => g).Sum(e => e.HolidayDays)</td>
                <td class="stats-summary">@Model.ContractEmployees.SelectMany(g => g).Sum(e => e.OffDays)</td>
            </tr>
            <tr>
                <td class="employee-info">Daily Wage Employees (003)</td>
                <td class="stats-summary">@Model.DailyWageEmployees.Sum(g => g.Count())</td>
