                                        @if (!string.IsNullOrEmpty(attendance.TimeIn) || !string.IsNullOrEmpty(attendance.TimeOut))
                                        {
                                            <div class="time-text">
                                                @if (!string.IsNullOrEmpty(attendance.TimeIn))
                                                {
                                                    <div>@attendance.TimeIn</div>
