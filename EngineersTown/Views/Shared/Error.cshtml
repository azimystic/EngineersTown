@model EngineersTown.Controllers.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-4 rounded-t-lg">
            <h1 class="text-2xl font-semibold flex items-center">
                <i class="fas fa-exclamation-triangle mr-3"></i>
                Error
            </h1>
        </div>

        <div class="p-6 text-center">
            <div class="mb-6">
                <i class="fas fa-bug text-red-500 text-6xl mb-4"></i>
                <h2 class="text-xl font-semibold text-red-600 mb-2">An error occurred while processing your request.</h2>

                @if (Model?.ShowRequestId == true)
                {
                    <div class="bg-gray-50 border border-gray-200 rounded-md p-4 mt-4">
                        <p class="text-sm text-gray-700">
                            <strong>Request ID:</strong> <code class="bg-gray-100 px-2 py-1 rounded text-xs">@Model.RequestId</code>
                        </p>
                    </div>
                }
            </div>

            <div>
                <a asp-controller="Attendance" asp-action="Index" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors duration-200 inline-flex items-center">
                    <i class="fas fa-home mr-2"></i> Go to Attendance
                </a>
            </div>
        </div>
    </div>
</div>