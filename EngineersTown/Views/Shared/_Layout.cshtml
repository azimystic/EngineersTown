<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Engineers Town Attendance</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    
    <!-- DataTables Core CSS -->
    <link href="~/css/datatables.css" rel="stylesheet" />

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            900: '#1e3a8a'
                        },
                        gray: {
                            50: '#f9fafb',
                            100: '#f3f4f6',
                            200: '#e5e7eb',
                            300: '#d1d5db',
                            500: '#6b7280',
                            600: '#4b5563',
                            700: '#374151',
                            800: '#1f2937',
                            900: '#111827'
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased">
    <!-- Navigation Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
        <nav class="bg-gradient-to-r from-primary-700 to-primary-600">
            <div class="max-w-full px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <!-- Brand -->
                    <div class="flex items-center">
                        <a class="flex items-center text-white hover:text-primary-100 transition-colors duration-200" asp-area="" asp-controller="Attendance" asp-action="Index">
                            <i class="fas fa-building text-xl mr-3"></i>
                            <span class="text-xl font-semibold">Engineers Town Society</span>
                        </a>
                    </div>

                    <!-- Navigation Menu -->
                    <div class="hidden md:flex items-center space-x-1">
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="Attendance" asp-action="Index">
                            <i class="fas fa-clock mr-2"></i>
                            Attendance
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="AttendanceReport" asp-action="Index">
                            <i class="fas fa-chart-line mr-2"></i>
                            Reports
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="PayrollReports" asp-action="Index">
                            <i class="fas fa-money-bill-wave mr-2"></i>
                            Payrolls
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="Calendar" asp-action="Index">
                            <i class="fas fa-calendar mr-2"></i>
                            Calendar
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="SalaryDefinition" asp-action="Index">
                            <i class="fas fa-calculator mr-2"></i>
                            Salary
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-users mr-2"></i>
                            Employees
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="Department" asp-action="Index">
                            <i class="fas fa-sitemap mr-2"></i>
                            Departments
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="Designation" asp-action="Index">
                            <i class="fas fa-user-tag mr-2"></i>
                            Designations
                        </a>
                        <a class="flex items-center px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200" asp-area="" asp-controller="OfficeTiming" asp-action="Index">
                            <i class="fas fa-business-time mr-2"></i>
                            Office Timings
                        </a>
                    </div>

                    <!-- Time Display -->
                    <div class="flex items-center">
                        <span class="text-primary-100 text-sm font-medium">
                            <i class="fas fa-clock mr-2"></i>
                            @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                        </span>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" class="bg-primary-600 p-2 rounded-md text-primary-200 hover:text-white hover:bg-primary-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" onclick="toggleMobileMenu()">
                            <span class="sr-only">Open main menu</span>
                            <i class="fas fa-bars h-6 w-6"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile menu -->
            <div class="md:hidden" id="mobile-menu" style="display: none;">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-primary-800">
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Attendance" asp-action="Index">
                        <i class="fas fa-clock mr-2"></i>Attendance
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="AttendanceReport" asp-action="Index">
                        <i class="fas fa-chart-line mr-2"></i>Reports
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="PayrollReports" asp-action="Index">
                        <i class="fas fa-money-bill-wave mr-2"></i>Payrolls
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Calendar" asp-action="Index">
                        <i class="fas fa-calendar mr-2"></i>Calendar
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="SalaryDefinition" asp-action="Index">
                        <i class="fas fa-calculator mr-2"></i>Salary
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Employee" asp-action="Index">
                        <i class="fas fa-users mr-2"></i>Employees
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Department" asp-action="Index">
                        <i class="fas fa-sitemap mr-2"></i>Departments
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Designation" asp-action="Index">
                        <i class="fas fa-user-tag mr-2"></i>Designations
                    </a>
                    <a class="text-white hover:bg-primary-700 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="OfficeTiming" asp-action="Index">
                        <i class="fas fa-business-time mr-2"></i>Office Timings
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
        <div class="max-w-full mx-auto py-6 px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-full mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="text-center text-sm text-gray-500">
                &copy; @DateTime.Now.Year - Engineers Town Attendance System
            </div>
        </div>
    </footer>

    <!-- jQuery (required for DataTables) -->
    <script src="~/js/jquery.min.js"></script>
    
    <!-- DataTables Core -->
    <script src="~/js/jqueryDatatables.min.js"></script>
    
    <!-- Mobile menu toggle script -->
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu.style.display === 'none' || menu.style.display === '') {
                menu.style.display = 'block';
            } else {
                menu.style.display = 'none';
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>