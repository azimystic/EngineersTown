<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Engineers Town Attendance</title>

    <!-- Bootstrap 5 CSS -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <!-- Font Awesome 5 CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
 

    <!-- DataTables Bootstrap Integration CSS -->
    <link href="~/css/bootstrapDatatables.css" rel="stylesheet" />


    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .sidebar {
            min-height: calc(100vh - 56px);
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Attendance" asp-action="Index">
                    <i class="fas fa-building"></i>Engineers Town Society
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Attendance
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AttendanceReport" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Attendance Report
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PayrollReports" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Payrolls
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Calendar" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Calendar
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SalaryDefinition" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Salary Definition
                            </a>
                        </li>
                    </ul>
                  
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Employees
                            </a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Department" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Department
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Designation" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Designation
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text">
                                <i class="fas fa-clock"></i> @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <main role="main" class="col-md-12 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Engineers Town Attendance System
        </div>
    </footer>

    <!-- jQuery (must come first) -->
    <script src="~/js/jquery.min.js"></script>

    <!-- Bootstrap 5 JS (depends on jQuery for some plugins like tooltips in older versions) -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- DataTables Core -->
    <script src="~/js/jqueryDatatables.min.js"></script>

    <!-- DataTables Bootstrap Integration (depends on both Bootstrap + DataTables) -->
    <script src="~/js/bootstrapDatatables.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>