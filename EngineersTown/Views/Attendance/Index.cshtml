@model EngineersTown.Models.ViewModels.AttendanceViewModel
@{
    ViewData["Title"] = "Daily Attendance";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4 rounded-t-lg">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-semibold flex items-center">
                    <i class="fas fa-clock mr-3"></i>
                    Daily Attendance Report
                </h1>
            </div>
        </div>

        <div class="p-6">
            <!-- Alert Messages -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <span>@ViewBag.ErrorMessage</span>
                    <button type="button" class="ml-auto text-red-400 hover:text-red-600" onclick="this.parentElement.style.display='none'">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    <span>@TempData["SuccessMessage"]</span>
                    <button type="button" class="ml-auto text-green-400 hover:text-green-600" onclick="this.parentElement.style.display='none'">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <span>@TempData["ErrorMessage"]</span>
                    <button type="button" class="ml-auto text-red-400 hover:text-red-600" onclick="this.parentElement.style.display='none'">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            <!-- Filters -->
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h2 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-filter mr-2 text-gray-600"></i>
                    Filters
                </h2>

                <!-- GET form: date and department names must match controller action parameters -->
                <form method="get" id="filterForm" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label for="date" class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                        <!-- Use explicit Razor expression and correct formatting so value renders reliably -->
                        <input type="date"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500"
                               id="date"
                               name="date"
                               value="@(Model.SelectedDate.ToString("yyyy-MM-dd"))"
                               onchange="submitFilterForm()" />
                    </div>

                    <div class="md:col-span-2">
                        <label for="departmentId" class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500"
                                id="departmentId"
                                name="departmentId"
                                onchange="submitFilterForm()">
                            @foreach (var dept in Model.Departments)
                            {
                                // The C# if statement controls which version of the <option> tag is rendered
                                if (dept.Value == Model.SelectedDepartmentId?.ToString())
                                {
                                    // Renders with the "selected" attribute
                                    <option value="@dept.Value" selected>@dept.Text</option>
                                }
                                else
                                {
                                    // Renders without the "selected" attribute
                                    <option value="@dept.Value">@dept.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">&nbsp;</label>
                        <button type="button"
                                onclick="printAttendanceReport()"
                                class="w-full px-4 py-2 bg-blue-600 text-gray font-medium rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-print mr-2"></i> Print Report
                        </button>
                    </div>
                </form>
            </div>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">

                <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-sm p-6 text-white transform hover:scale-105 transition-transform duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-green-100 text-sm font-medium">Present</p>
                            <p class="text-3xl font-bold">@Model.EmployeeAttendances.Count(e => e.Status == "Present" || e.Status == "Late")</p>
                        </div>
                        <div class="text-green-200">
                            <i class="fas fa-user-check text-3xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-r from-red-500 to-red-600 rounded-lg shadow-sm p-6 text-white transform hover:scale-105 transition-transform duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-red-100 text-sm font-medium">Absent</p>
                            <p class="text-3xl font-bold">@Model.EmployeeAttendances.Count(e => e.Status == "Absent")</p>
                        </div>
                        <div class="text-red-200">
                            <i class="fas fa-user-times text-3xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-sm p-6 text-white transform hover:scale-105 transition-transform duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-blue-100 text-sm font-medium">Total</p>
                            <p class="text-3xl font-bold">@Model.EmployeeAttendances.Count</p>
                        </div>
                        <div class="text-blue-200">
                            <i class="fas fa-users text-3xl"></i>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Attendance Table -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="attendanceTable">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sr#</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Designation</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time In</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time Out</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @if (Model.EmployeeAttendances.Any())
                            {
                                @for (int i = 0; i < Model.EmployeeAttendances.Count; i++)
                                {
                                    var employee = Model.EmployeeAttendances[i];
                                    var rowClass = employee.Status switch
                                    {
                                        "Present" => "bg-green-50 hover:bg-green-100",
                                        "Absent" => "bg-red-50 hover:bg-red-100",
                                        "Late" => "bg-yellow-50 hover:bg-yellow-100",
                                        _ => "hover:bg-gray-50"
                                    };

                                    <tr class="@rowClass transition-colors duration-150">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@(i + 1)</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">@employee.EmployeeName</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@employee.DepartmentName</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@employee.DesignationName</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@employee.TimeIn</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@employee.TimeOut</td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @(employee.Status switch
                                                  {
                                                      "Present" => "bg-green-100 text-green-800",
                                                      "Absent" => "bg-red-100 text-red-800",
                                                      "Late" => "bg-yellow-100 text-yellow-800",
                                                      _ => "bg-gray-100 text-gray-800"
                                                  })">
                                                @employee.StatusDisplay
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="px-6 py-12 text-center">
                                        <div class="flex flex-col items-center">
                                            <i class="fas fa-inbox text-4xl text-gray-400 mb-4"></i>
                                            <p class="text-lg font-medium text-gray-600">No employees found</p>
                                            <p class="text-sm text-gray-500">Try adjusting your filters</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Submit filter form (GET) when date or department changes
        function submitFilterForm() {
            document.getElementById('filterForm').submit();
        }

        // Open print view in a new tab. If date input is empty for some reason fallback to Model.SelectedDate rendered server-side
        function printAttendanceReport() {
            var dateInput = document.getElementById('date').value;
            // fallback to server-side selected date (rendered as yyyy-MM-dd)
            if (!dateInput || dateInput.trim() === '') {
                dateInput = '@Model.SelectedDate.ToString("yyyy-MM-dd")';
            }
            var departmentId = document.getElementById('departmentId').value;

            var url = '@Url.Action("PrintAttendance", "Attendance")' + '?date=' + encodeURIComponent(dateInput);
            if (departmentId) {
                url += '&departmentId=' + encodeURIComponent(departmentId);
            }

            window.open(url, '_blank');
        }

        $(document).ready(function() {
            // Initialize DataTable if available
            if (typeof $.fn.DataTable !== 'undefined') {
                $('#attendanceTable').DataTable({
                    "pageLength": 25,
                    "order": [[1, "asc"]],
                    "columnDefs": [
                        { "orderable": false, "targets": 0 }
                    ],
                    "language": {
                        "search": "<i class='fas fa-search'></i>",
                        "searchPlaceholder": "Search records..."
                    },
                    "dom": '<"flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4"<"mb-4 sm:mb-0"l><"sm:ml-auto"f>>t<"flex flex-col sm:flex-row sm:items-center sm:justify-between mt-4"<"mb-4 sm:mb-0"i><"sm:ml-auto"p>>'
                });
            }
        });
    </script>
}