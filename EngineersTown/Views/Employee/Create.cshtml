@model Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Create Employee
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" id="employeeForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-semibold"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ZkedID" class="form-label fw-semibold"></label>
                                    <input asp-for="ZkedID" class="form-control" />
                                    <span asp-validation-for="ZkedID" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="CNIC" class="form-label fw-semibold"></label>
                                    <input asp-for="CNIC" class="form-control" />
                                    <span asp-validation-for="CNIC" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="DOB" class="form-label fw-semibold"></label>
                                    <input asp-for="DOB" type="date" class="form-control" />
                                    <span asp-validation-for="DOB" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DepartmentId" class="form-label fw-semibold"></label>
                                    <select asp-for="DepartmentId" asp-items="ViewBag.DepartmentId" class="form-select" id="departmentSelect">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="DesignationId" class="form-label fw-semibold"></label>
                                    <select asp-for="DesignationId" class="form-select" id="designationSelect">
                                        <option value="">-- Select Designation --</option>
                                    </select>
                                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Type" class="form-label fw-semibold"></label>
                                    <select asp-for="Type" asp-items="ViewBag.EmployeeTypes" class="form-select" id="Type">
                                        <option value="">-- Select Type --</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3" id="contractExpiryGroup" style="display: none;">
                                    <label asp-for="ContractExpiryDate" class="form-label fw-semibold"></label>
                                    <input asp-for="ContractExpiryDate" type="date" class="form-control" />
                                    <span asp-validation-for="ContractExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load designations when department changes
            $('#departmentSelect').change(function() {
                var departmentId = $(this).val();
                if (departmentId) {
                    $.getJSON('/Employee/GetDesignationsByDepartment', { departmentId: departmentId }, function(data) {
                        $('#designationSelect').empty().append('<option value="">-- Select Designation --</option>');
                        $.each(data, function(i, item) {
                            $('#designationSelect').append($('<option>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });
                } else {
                    $('#designationSelect').empty().append('<option value="">-- Select Designation --</option>');
                }
            });

            // Show/hide contract expiry date based on employee type
            $('#Type').change(function() {
                if ($(this).val() === '002') {
                    $('#contractExpiryGroup').show();
                } else {
                    $('#contractExpiryGroup').hide();
                }
            });

            // Trigger change on page load in case of validation errors
            $('#Type').trigger('change');
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        .form-label {
            color: #495057;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .btn {
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-1px);
            }
    </style>
}