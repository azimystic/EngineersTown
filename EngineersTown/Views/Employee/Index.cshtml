@model IEnumerable<EngineersTown.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="w-full py-6">
    <div class="w-full">
        <div class="bg-white rounded-lg shadow-sm border-0">
            <div class="bg-gradient-to-r from-primary-700 to-primary-600 text-white py-4 px-6 rounded-t-lg">
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-semibold mb-0">
                        <i class="fas fa-users mr-2"></i>
                        Employee Management
                    </h3>
                    <a asp-action="Create" class="bg-white text-primary-700 hover:bg-gray-50 px-4 py-2 rounded-md font-medium transition-colors duration-200">
                        <i class="fas fa-plus mr-2"></i> Add Employee
                    </a>
                </div>
            </div>

            <div class="p-6">
                <!-- Filters -->
                <div class="flex justify-between items-center mb-4">
                    <div class="flex rounded-lg border border-gray-200 overflow-hidden">
                        <input type="radio" class="sr-only" name="statusFilter" id="all" value="all" checked>
                        <label class="px-4 py-2 cursor-pointer bg-primary-600 text-white border-r border-gray-200" for="all">All Employees</label>

                        <input type="radio" class="sr-only" name="statusFilter" id="active" value="active">
                        <label class="px-4 py-2 cursor-pointer bg-white text-gray-700 hover:bg-gray-50 border-r border-gray-200" for="active">Active</label>

                        <input type="radio" class="sr-only" name="statusFilter" id="left" value="left">
                        <label class="px-4 py-2 cursor-pointer bg-white text-gray-700 hover:bg-gray-50" for="left">Left</label>
                    </div>
                </div>

                <div class="rounded-lg overflow-hidden">
                    <table id="employeeTable" class="w-full table-auto" style="width:100%">
                        <thead class="bg-gray-800 text-white">
                            <tr>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Name</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">ZkedID</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">CNIC</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Birth Date</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Department</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Designation</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Type</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Contract Expiry</th>
                                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Status</th>
                                <th class="px-4 py-3 text-center text-sm font-semibold uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                <tr data-status="@(item.HasLeft ? "left" : "active")" class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-4 py-4 font-semibold text-gray-900">@item.Name</td>
                                    <td class="px-4 py-4 text-gray-700">@item.ZkedID</td>
                                    <td class="px-4 py-4 text-gray-700">@item.CNIC</td>
                                    <td class="px-4 py-4 text-gray-700">@item.DOB.ToString("yyyy-MM-dd")</td>
                                    <td class="px-4 py-4 text-gray-700">@item.Department?.Name</td>
                                    <td class="px-4 py-4 text-gray-700">@item.Designation?.Name</td>
                                    <td class="px-4 py-4">
                                        @if (item.Type == "001")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Regular</span>
                                        }
                                        else if (item.Type == "002")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Contract</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Daily Wager</span>
                                        }
                                    </td>
                                    <td class="px-4 py-4 text-gray-700">@(item.ContractExpiryDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td class="px-4 py-4">
                                        @if (item.HasLeft)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Left</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                        }
                                    </td>
                                    <td class="px-4 py-4 text-center">
                                        <div class="flex justify-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md text-sm transition-colors duration-200" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (item.HasLeft)
                                            {
                                                <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="inline">
                                                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded-md text-sm transition-colors duration-200" title="Reactivate Employee">
                                                        <i class="fas fa-user-check"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline">
                                                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm transition-colors duration-200" title="Mark as Left">
                                                        <i class="fas fa-user-times"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var table = $('#employeeTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100],
                "order": [[0, "asc"]],
                "dom": '<"flex flex-wrap items-center justify-between mb-4"<"flex-1"l><"flex-1 text-right"f>>rt<"flex flex-wrap items-center justify-between mt-4"<"flex-1"i><"flex-1 text-right"p>>',
                "language": {
                    "search": "<i class='fas fa-search'></i>",
                    "searchPlaceholder": "Search employees...",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": 9 } // Disable sorting on Actions column
                ],
                "initComplete": function() {
                    $('.dataTables_filter input')
                        .removeClass()
                        .addClass('px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500');
                    $('.dataTables_length select')
                        .removeClass()
                        .addClass('px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500');
                }
            });

            // Filter buttons functionality
            $('input[name="statusFilter"]').on('change', function() {
                var status = $(this).val();
                
                // Update button styles
                $('label[for="all"], label[for="active"], label[for="left"]').removeClass('bg-primary-600 text-white').addClass('bg-white text-gray-700 hover:bg-gray-50');
                $(this).next('label').removeClass('bg-white text-gray-700 hover:bg-gray-50').addClass('bg-primary-600 text-white');

                if (status === 'all') {
                    table.column(8).search('').draw();
                } else if (status === 'active') {
                    table.column(8).search('^Active$', true, false).draw();
                } else if (status === 'left') {
                    table.column(8).search('^Left$', true, false).draw();
                }
            });

            // Add confirmation to delete/restore actions
            $('form').on('submit', function(e) {
                var action = $(this).find('button').attr('title');
                if (!confirm(`Are you sure you want to ${action}?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>

    <style>
        /* DataTables custom styling for Tailwind */
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5rem 0.75rem !important;
            margin-left: 0.25rem !important;
            border-radius: 0.375rem !important;
            border: 1px solid #d1d5db !important;
            background: white !important;
            color: #374151 !important;
            text-decoration: none !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current,
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #2563eb !important;
            color: white !important;
            border: 1px solid #2563eb !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
            color: #9ca3af !important;
            cursor: not-allowed !important;
        }

        .dataTables_wrapper .dataTables_filter label,
        .dataTables_wrapper .dataTables_length label {
            font-weight: 500;
            color: #374151;
        }

        .dataTables_wrapper .dataTables_info {
            color: #6b7280;
            font-size: 0.875rem;
        }
    </style>
}