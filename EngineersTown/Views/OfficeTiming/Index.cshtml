@model IEnumerable<EngineersTown.Models.OfficeTiming>

@{
    ViewData["Title"] = "Office Timings";
}

<div class="w-full py-6">
    <div class="w-full">
        <div class="bg-white rounded-lg shadow-sm border-0">
            <div class="bg-gradient-to-r from-primary-700 to-primary-600 text-white py-4 px-6 rounded-t-lg">
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-semibold mb-0">
                        <i class="fas fa-clock mr-2"></i>
                        Office Timings
                    </h3>
                </div>
            </div>

            <div class="p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4" role="alert">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle mr-2"></i>
                            <span>@TempData["SuccessMessage"]</span>
                        </div>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            <span>@TempData["ErrorMessage"]</span>
                        </div>
                    </div>
                }

                <div class="rounded-lg overflow-hidden">
                    <table id="officeTimingsTable" class="w-full table-auto" style="width:100%">
                        <thead class="bg-gray-800 text-white">
                            <tr>
                                <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">Day of Week</th>
                                <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">Start Time</th>
                                <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">End Time</th>
                                <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-center text-sm font-semibold uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4 font-semibold text-gray-900">@item.DayOfWeek</td>
                                    <td class="px-6 py-4 text-gray-700">
                                        @if (item.IsOffDay)
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                        else
                                        {
                                            @item.StartTime.ToString(@"hh\:mm")
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-gray-700">
                                        @if (item.IsOffDay)
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                        else
                                        {
                                            @item.EndTime.ToString(@"hh\:mm")
                                        }
                                    </td>
                                    <td class="px-6 py-4">
                                        @if (item.IsOffDay)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Off Day</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Working Day</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md text-sm transition-colors duration-200" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#officeTimingsTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100],
                "order": [[0, "asc"]],
                "dom": '<"flex flex-wrap items-center justify-between mb-4"<"flex-1"l><"flex-1 text-right"f>>rt<"flex flex-wrap items-center justify-between mt-4"<"flex-1"i><"flex-1 text-right"p>>',
                "language": {
                    "search": "<i class='fas fa-search'></i>",
                    "searchPlaceholder": "Search office timings...",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": 4 } // Disable sorting on Actions column
                ],
                "initComplete": function() {
                    $('.dataTables_filter input')
                        .removeClass()
                        .addClass('px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500');
                    $('.dataTables_length select')
                        .removeClass()
                        .addClass('px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500');
                }
            });
        });
    </script>

    <style>
        /* DataTables custom styling for Tailwind */
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5rem 0.75rem !important;
            margin-left: 0.25rem !important;
            border-radius: 0.375rem !important;
            border: 1px solid #d1d5db !important;
            background: white !important;
            color: #374151 !important;
            text-decoration: none !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current,
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #2563eb !important;
            color: white !important;
            border: 1px solid #2563eb !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
            color: #9ca3af !important;
            cursor: not-allowed !important;
        }

        .dataTables_wrapper .dataTables_filter label,
        .dataTables_wrapper .dataTables_length label {
            font-weight: 500;
            color: #374151;
        }

        .dataTables_wrapper .dataTables_info {
            color: #6b7280;
            font-size: 0.875rem;
        }
    </style>
}