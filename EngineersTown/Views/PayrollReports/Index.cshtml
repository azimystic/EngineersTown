@{
    ViewData["Title"] = "Payroll Reports";
    var availablePeriods = ViewBag.AvailablePeriods as IEnumerable<dynamic>;
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4 rounded-t-lg">
            <h1 class="text-2xl font-semibold flex items-center">
                <i class="fas fa-money-bill-wave mr-3"></i>
                Payroll Reports
            </h1>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                <!-- Generate New Report -->
                <div class="bg-blue-50 rounded-lg border border-blue-200 p-6">
                    <h2 class="text-lg font-medium text-blue-900 mb-4 flex items-center">
                        <i class="fas fa-plus-circle mr-2"></i>
                        Generate Payroll Report
                    </h2>
                    <form asp-action="GenerateReport" method="post" class="space-y-4">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <label for="month" class="block text-sm font-medium text-gray-700 mb-2">Month</label>
                                <select name="month" id="month" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" required>
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        var monthName = new DateTime(2000, i, 1).ToString("MMMM");
                                        <option value="@i" selected="@(i == DateTime.Now.Month)">
                                            @monthName
                                        </option>
                                    }
                                </select>
                            </div>
                            <div>
                                <label for="year" class="block text-sm font-medium text-gray-700 mb-2">Year</label>
                                <select name="year" id="year" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" required>
                                    @for (int year = DateTime.Now.Year - 2; year <= DateTime.Now.Year + 1; year++)
                                    {
                                        <option value="@year" selected="@(year == DateTime.Now.Year)">
                                            @year
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="w-full px-4 py-2 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-calculator mr-2"></i> Generate Report
                        </button>
                    </form>
                </div>

                <!-- Available Reports -->
                <div class="bg-green-50 rounded-lg border border-green-200 p-6">
                    <h2 class="text-lg font-medium text-green-900 mb-4 flex items-center">
                        <i class="fas fa-file-alt mr-2"></i>
                        Available Reports
                    </h2>
                    @if (availablePeriods != null && availablePeriods.Any())
                    {
                        <div class="space-y-2 max-h-64 overflow-y-auto">
                            @foreach (var period in availablePeriods.Take(10))
                            {
                                var monthName = new DateTime(period.Year, period.Month, 1).ToString("MMMM yyyy");
                                <div class="flex items-center justify-between p-3 bg-white rounded-md border border-gray-200 hover:border-green-300 transition-colors duration-150">
                                    <span class="font-medium text-gray-900">@monthName</span>
                                    <div class="flex space-x-2">
                                        <a href="@Url.Action("ViewReport", new { month = period.Month, year = period.Year })" 
                                           class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded hover:bg-blue-200 transition-colors duration-150 flex items-center">
                                            <i class="fas fa-eye mr-1"></i> View
                                        </a>
                                        <a href="@Url.Action("Print", new { month = period.Month, year = period.Year })" 
                                           class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded hover:bg-green-200 transition-colors duration-150 flex items-center" target="_blank">
                                            <i class="fas fa-print mr-1"></i> Print
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (availablePeriods.Count() > 10)
                        {
                            <p class="text-gray-500 text-sm mt-3">Showing latest 10 reports...</p>
                        }
                    }
                    else
                    {
                        <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-md flex items-center">
                            <i class="fas fa-info-circle mr-2"></i>
                            <span>No payroll reports generated yet. Generate your first report above.</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-yellow-50 rounded-lg border border-yellow-200 p-6">
                <h2 class="text-lg font-medium text-yellow-900 mb-4 flex items-center">
                    <i class="fas fa-bolt mr-2"></i>
                    Quick Actions
                </h2>
                <div class="flex flex-col sm:flex-row gap-3">
                    <form method="post" asp-action="GenerateReport" asp-controller="PayrollReports" class="flex-1">
                        <input type="hidden" name="month" value="@DateTime.Now.Month" />
                        <input type="hidden" name="year" value="@DateTime.Now.Year" />
                        <button type="submit" class="w-full px-4 py-2 bg-yellow-600 text-white font-medium rounded-md hover:bg-yellow-700 focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-calendar-alt mr-2"></i> Current Month Report
                        </button>
                    </form>

                    <form method="post" asp-action="GenerateReport" asp-controller="PayrollReports" class="flex-1">
                        <input type="hidden" name="month" value="@DateTime.Now.AddMonths(-1).Month" />
                        <input type="hidden" name="year" value="@DateTime.Now.AddMonths(-1).Year" />
                        <button type="submit" class="w-full px-4 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200 flex items-center justify-center">
                            <i class="fas fa-calendar-minus mr-2"></i> Previous Month Report
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form for quick actions
            $('.quick-action').click(function(e) {
                e.preventDefault();
                var month = $(this).data('month');
                var year = $(this).data('year');
                $('#month').val(month);
                $('#year').val(year);
                $('form').submit();
            });
        });
    </script>
}