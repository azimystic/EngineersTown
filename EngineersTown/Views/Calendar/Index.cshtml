@* Views/Calendar/Index.cshtml *@
@model EngineersTown.Models.CalendarViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Monthly Calendar";
    var monthNames = new[] { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };
    var currentMonthName = monthNames[Model.Month - 1];
    var prevMonth = Model.Month == 1 ? 12 : Model.Month - 1;
    var prevYear = Model.Month == 1 ? Model.Year - 1 : Model.Year;
    var nextMonth = Model.Month == 12 ? 1 : Model.Month + 1;
    var nextYear = Model.Month == 12 ? Model.Year + 1 : Model.Year;
    var token = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<input type="hidden" name="__RequestVerificationToken" value="@token" />

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4 rounded-t-lg">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-semibold flex items-center">
                    <i class="fas fa-calendar-alt mr-3"></i>
                    @currentMonthName @Model.Year
                </h1>
                <div class="flex space-x-2">
                    <a href="@Url.Action("Index", new { year = prevYear, month = prevMonth })"
                       class="px-3 py-2 bg-white text-primary-600 font-medium rounded-md hover:bg-gray-50 focus:ring-2 focus:ring-white focus:ring-offset-2 transition-colors duration-200 text-sm">
                        <i class="fas fa-chevron-left mr-1"></i> Previous
                    </a>
                    <a href="@Url.Action("Index", new { year = DateTime.Now.Year, month = DateTime.Now.Month })"
                       class="px-3 py-2 bg-white text-primary-600 font-medium rounded-md hover:bg-gray-50 focus:ring-2 focus:ring-white focus:ring-offset-2 transition-colors duration-200 text-sm">
                        Today
                    </a>
                    <a href="@Url.Action("Index", new { year = nextYear, month = nextMonth })"
                       class="px-3 py-2 bg-white text-primary-600 font-medium rounded-md hover:bg-gray-50 focus:ring-2 focus:ring-white focus:ring-offset-2 transition-colors duration-200 text-sm">
                        Next <i class="fas fa-chevron-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="p-6">
            <div class="mb-6">
                <form asp-action="Update" method="post" class="flex items-center space-x-3">
                    <select name="month" class="px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(i == Model.Month)">@monthNames[i - 1]</option>
                        }
                    </select>
                    <input type="number" name="year" value="@Model.Year" class="px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500" min="2000" max="2100" />
                    <button type="submit" class="px-4 py-2 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors duration-200">Go</button>
                </form>
            </div>

                    <div class="calendar-grid">
                        <div class="calendar-header">
                            @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>())
                            {
                                <div class="calendar-cell header-cell">@day.ToString().Substring(0, 3)</div>
                            }
                        </div>
                        <div class="calendar-body">
                            @for (int week = 0; week < 6; week++)
                            {
                                <div class="calendar-row">
                                    @for (int day = 0; day < 7; day++)
                                    {
                                        var index = week * 7 + day;
                                        if (index < Model.Days.Count)
                                        {
                                            var calendarDay = Model.Days[index];
                                            <div class="calendar-cell @(!calendarDay.IsCurrentMonth ? "other-month" : "")
                                                             @(calendarDay.IsToday ? "today" : "")
                                                             @(calendarDay.IsOffDay ? "off-day" : "")
                                                             @(calendarDay.IsCustomHoliday ? "custom-holiday" : "")"
                                                 onclick="showDayModal('@calendarDay.Date.ToString("yyyy-MM-dd")', @calendarDay.IsCustomHoliday.ToString().ToLower(), '@calendarDay.EventTitle')">
                                                <div class="day-number">@calendarDay.DayNumber</div>
                                                @if (calendarDay.IsCustomHoliday && !string.IsNullOrEmpty(calendarDay.EventTitle))
                                                {
                                                    <div class="event-title">@calendarDay.EventTitle</div>
                                                }
                                                else if (!calendarDay.IsOffDay && calendarDay.OfficeStartTime.HasValue)
                                                {
                                                    <div class="office-hours">
                                                        @calendarDay.OfficeStartTime?.ToString(@"hh\:mm") - @calendarDay.OfficeEndTime?.ToString(@"hh\:mm")
                                                    </div>
                                                }
                                            </div>
                                        }
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for adding/removing holidays -->
<div id="dayModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="flex items-center justify-between mb-4 pb-3 border-b">
            <h3 class="text-lg font-semibold text-gray-900">Manage Date: <span id="modalDate"></span></h3>
            <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="mt-3">
            <div id="holidayForm">
                <div class="mb-4">
                    <label for="holidayTitle" class="block text-sm font-medium text-gray-700 mb-2">Holiday Title</label>
                    <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500" id="holidayTitle" required>
                </div>
                <div class="mb-4">
                    <label for="holidayDescription" class="block text-sm font-medium text-gray-700 mb-2">Description (Optional)</label>
                    <textarea class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500" id="holidayDescription" rows="3"></textarea>
                </div>
                <button type="button" class="w-full px-4 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200" onclick="addHoliday()">
                    <i class="fas fa-plus mr-2"></i> Add Holiday
                </button>
            </div>
            <div id="holidayInfo" class="hidden">
                <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
                    <h6 class="text-sm font-semibold text-yellow-800 mb-2">Current Holiday:</h6>
                    <p id="currentHolidayTitle" class="text-sm text-yellow-700"></p>
                </div>
                <button type="button" class="w-full px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-200" onclick="removeHoliday()">
                    <i class="fas fa-trash mr-2"></i> Remove Holiday
                </button>
            </div>
        </div>
    </div>
</div>

 
    <style>
        .calendar-grid {
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            overflow: hidden;
        }

        .calendar-header {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            background-color: #f9fafb;
            font-weight: 600;
        }

        .calendar-body {
            display: grid;
            grid-template-rows: repeat(6, 1fr);
        }

        .calendar-row {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            min-height: 100px;
        }

        .calendar-cell {
            border: 1px solid #e5e7eb;
            padding: 0.5rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .calendar-cell:hover {
            background-color: #f3f4f6;
        }

        .header-cell {
            text-align: center;
            padding: 0.75rem;
            color: #374151;
        }

        .other-month {
            background-color: #f9fafb;
            color: #9ca3af;
        }

        .today {
            background-color: #dbeafe;
            border: 2px solid #3b82f6;
        }

        .off-day {
            background-color: #fee2e2;
            color: #dc2626;
        }

        .custom-holiday {
            background-color: #fef3c7;
            color: #92400e;
        }

        .day-number {
            font-weight: 600;
            font-size: 1.1em;
            color: #111827;
        }

        .event-title {
            font-size: 0.8em;
            margin-top: 0.25rem;
            color: #92400e;
        }

        .office-hours {
            font-size: 0.7em;
            color: #6b7280;
            margin-top: 0.25rem;
        }
    </style>
 

 
    <script>
        let selectedDate = '';

        function closeModal() {
            document.getElementById('dayModal').classList.add('hidden');
        }

        function showDayModal(date, isHoliday, holidayTitle) {
            selectedDate = date;
            const modalDate = new Date(date + 'T00:00:00');
            document.getElementById('modalDate').textContent = modalDate.toLocaleDateString();

            if (isHoliday) {
                document.getElementById('holidayForm').classList.add('hidden');
                document.getElementById('holidayInfo').classList.remove('hidden');
                document.getElementById('currentHolidayTitle').textContent = holidayTitle;
            } else {
                document.getElementById('holidayForm').classList.remove('hidden');
                document.getElementById('holidayInfo').classList.add('hidden');
                document.getElementById('holidayTitle').value = '';
                document.getElementById('holidayDescription').value = '';
            }

            document.getElementById('dayModal').classList.remove('hidden');
        }

          function addHoliday() {
        const title = document.getElementById('holidayTitle').value;
        const description = document.getElementById('holidayDescription').value;

        if (!title) {
            alert('Please enter a holiday title');
            return;
        }

        const dateObj = new Date(selectedDate);
        const formattedDate = dateObj.toISOString(); // Full ISO string

        fetch('@Url.Action("AddHoliday", "Calendar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({
                date: formattedDate,
                title: title,
                description: description
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Holiday added successfully');
                closeModal();
                location.reload();
            } else {
                alert(data.message);
            }
        })
        .catch(error => {
            alert('Error adding holiday: ' + error);
        });
    }

           function removeHoliday() {
        if (confirm('Are you sure you want to remove this holiday?')) {
            fetch('@Url.Action("RemoveHoliday", "Calendar")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({
                    date: selectedDate
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Holiday removed successfully');
                    closeModal();
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                alert('Error removing holiday: ' + error);
            });
        }
    }

    </script>
 